{
  "name": "marykay-core-api",
  "version": "1.0.0",
  "description": "API Desenvolvida para auxiliar no controle de vendas de consultores marykay.",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/index.ts",
    "husky:prepare": "husky",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:push": "yarn test --coverage"
  },
  "lint-staged": {
    "*.ts": [
      "biome format --write",
      "biome lint",
      "yarn test:staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wgb-code/marykay-core-api.git"
  },
  "keywords": [
    "marykay",
    "api",
    "typescript",
    "nodejs",
    "express"
  ],
  "author": "Willian Gabriel",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "alias": "^0.0.5",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
